  <ThingDef ParentName="ApparelBase">
    <defName>ESCP_DwemerCirclet</defName>
    <label>dwemer circlet</label>
    <description>A small dwemer circlet.</description>
    <smeltable>true</smeltable>
    <thingCategories>
      <li>HeadgearNoble</li>
    </thingCategories>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
      <researchPrerequisite>RoyalApparel</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/Hats/DwemerCirclet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.8, 0.8)</drawSize>
    </graphicData>
    <uiIconScale>1.15</uiIconScale>
    <costList>
      <ESCP_DwemerMetal>50</ESCP_DwemerMetal>
      <Gold>10</Gold>
    </costList>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>8000</WorkToMake>
      <Mass>0.7</Mass>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.2</SocialImpact>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.2</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Hats/DwemerCirclet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Royal</li>
        <li>RoyalTier5</li>
      </tags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
      <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
    </apparel>
  </ThingDef>
</Defs>